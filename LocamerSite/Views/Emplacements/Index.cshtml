@model IEnumerable<LocamerSite.Models.Emplacement>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Créer un nouvel emplacement", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.capacite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.terrasse)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarif.libelleTarif)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.capacite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.terrasse)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarif.libelleTarif)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.codeEmplacement }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.codeEmplacement })
        </td>
    </tr>
}

</table>
